@model List<ProductManagement.Domain.Entities.Product>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add Multiple Items/Products Information</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" id="productForm">
            <div id="productRows">
                <div class="row p-2 border-bottom product-row">
                    <div class="col-2">
                        <input asp-for="@Model[0].ImagePath" class="form-control border shadow" />
                        <label asp-for="@Model[0].ImagePath" class="ms-2"></label><br >
                        <span asp-validation-for="@Model[0].ImagePath" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="@Model[0].Title" class="form-control border shadow" />
                        <label asp-for="@Model[0].Title" class="ms-2"></label><br >
                        <span asp-validation-for="@Model[0].Title" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model[0].Description" class="form-control border shadow" />
                        <label asp-for="@Model[0].Description" class="ms-2"></label><br>
                        <span asp-validation-for="@Model[0].Description" class="text-danger"></span>

                    </div>
                    <div class="col-1">
                        <input asp-for="@Model[0].Quantity" class="form-control border shadow" />
                        <label asp-for="@Model[0].Quantity" class="ms-2"></label><br>
                        <span asp-validation-for="@Model[0].Quantity" class="text-danger"></span>

                    </div>
                    <div class="col-2">
                        <input asp-for="@Model[0].Price" class="form-control border shadow" />
                        <label asp-for="@Model[0].Price" class="ms-2"></label><br>
                        <span asp-validation-for="@Model[0].Price" class="text-danger"></span>

                    </div>
                    <div class="col-2">
                        <input asp-for="@Model[0].Date" class="form-control border shadow" />
                        <label asp-for="@Model[0].Date" class="ms-2"></label><br>
                        <span asp-validation-for="@Model[0].Date" class="text-danger"></span>

                    </div>
                    <div class="col-1 d-flex align-items-center">
                        <button type="button" class="btn btn-success add-row">
                            <i class="bi bi-plus-circle"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-check-circle"></i> Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var index = 1; 

            $('.add-row').click(function () {
                var newRow = `
                    <div class="row p-2 border-bottom product-row">
                        <div class="col-2">
                            <input asp-for="Products[` + index + `].ImagePath" name="Products[` + index + `].ImagePath" class="form-control border shadow" />
                            <label for="Products[` + index + `].ImagePath" class="ms-2">Image Path</label>
                            <span asp-validation-for="Products[` + index + `].ImagePath" class="text-danger"></span>
                        </div>
                        <div class="col-2">
                            <input asp-for="Products[` + index + `].Title" name="Products[` + index + `].Title" class="form-control border shadow" />
                            <label for="Products[` + index + `].Title" class="ms-2">Title</label>
                            <span asp-validation-for="Products[` + index + `].Title" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <input asp-for="Products[` + index + `].Description" name="Products[` + index + `].Description" class="form-control border shadow" />
                            <label for="Products[` + index + `].Description" class="ms-2">Description</label>
                            <span asp-validation-for="Products[` + index + `].Description" class="text-danger"></span>
                        </div>
                        <div class="col-1">
                            <input asp-for="Products[` + index + `].Quantity" name="Products[` + index + `].Quantity" class="form-control border shadow" />
                            <label for="Products[` + index + `].Quantity" class="ms-2">Quantity</label>
                            <span asp-validation-for="Products[` + index + `].Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-2">
                            <input asp-for="Products[` + index + `].Price" name="Products[` + index + `].Price" class="form-control border shadow" />
                            <label for="Products[` + index + `].Price" class="ms-2">Price</label>
                            <span asp-validation-for="Products[` + index + `].Price" class="text-danger"></span>
                        </div>
                        <div class="col-2">
                            <input asp-for="Products[` + index + `].Date" name="Products[` + index + `].Date" class="form-control border shadow" />
                            <label for="Products[` + index + `].Date" class="ms-2">Date</label>
                            <span asp-validation-for="Products[` + index + `].Date" class="text-danger"></span>
                        </div>
                        <div class="col-1 d-flex align-items-center">
                            <button type="button" class="btn btn-danger remove-row">
                                <i class="bi bi-dash-circle"></i>
                            </button>
                        </div>
                    </div>`;
                $('#productRows').append(newRow);
                index++; 
            });

            $(document).on('click', '.remove-row', function () {
                $(this).closest('.product-row').remove();
                
            });
        });


    </script>
}



